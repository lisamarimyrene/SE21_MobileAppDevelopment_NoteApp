{
  "expo": {
    "name": "noteapp-reactnative",
    "slug": "noteapp-reactnative",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "scheme": "noteapp-reactnative",
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to add images to your notes."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-media-library",
        {
          "photosPermission": "Allow NoteApp to access your photos.",
          "savePhotosPermission": "Allow NoteApp to save photos.",
          "isAccessMediaLocationEnabled": true
        }
      ],
      [
        "expo-image-picker"
      ],
      [
        "expo-media-library"
      ],
      "expo-router"
    ]
  },
  "packagerOpts": {
    "sourceExts": [
      "js",
      "json",
      "ts",
      "tsx",
      "jsx"
    ]
  }
}